    <section class="contact" id="contact">
      <div class="container min-vh-100">
        <div class="row justify-content-center">
          <h1 class="heading">
            <span>'<span> Make an appointment </span>'</span>
          </h1>

          <div class="col-md-10" data-aos="flip-down">
            <% if(!currentUser) {%>

            <form action="/users" method="post">
              <div class="inputBox">
                <select name="appointmentSection" id="appointmentSection">
                  <option value="" disabled selected>choose a section</option>
                  <% for(let docs of doctors){ %>
                  <option value="<%= docs.doctorSection %>">
                    <%= docs.doctorSection %>
                  </option>
                  <% } %>
                </select>

                <select name="appointmentDoctor" id="appointmentDoctor">
                  <option value="" disabled selected>choose a doctor</option>
                  <% for(let docs of doctors){ %>
                  <option value="<%= docs.username %>">
                    <%= docs.username %>
                  </option>
                  <% } %>
                </select>

                <input type="date" name="appointmentTime" required />
                <input type="time" />
              </div>

              <textarea
                name=""
                id=""
                cols="30"
                rows="10"
                placeholder="message ( optional )"
              ></textarea>

              <input
                type="submit"
                name=""
                id=""
                value="make appointment"
                class="button"
              />
            </form>
            <% } else { %>
            <form
              action="/users/<%=currentUser._id%>"
              method="post"
              id="demoForm"
              class="demoForm"
            >
              <div class="inputBox">
                <select name="appointmentSection" id="appointmentSection">
                  <option value="dept" disabled selected>
                    choose a section
                  </option>
                  <% for(let docs of doctors){ %>
